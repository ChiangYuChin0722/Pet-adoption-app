{
  "expo": {
    "name": "pet-adopt-app",
    "slug": "pet-adopt-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/category.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.petadopt",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "我們需要麥克風權限來錄製語音消息。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "petadoptcom.petadopt"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "a98eb3c8-b3b2-4a38-8074-168b062c5852"
      }
    }
  }
}
